/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    Not16(in[0] = false, in[1..15] = true, out=inc);
    Add16(a=in, b=inc, out=out);
}
